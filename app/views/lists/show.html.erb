<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "delete this list", list_path(@list), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"} %>
  <%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: 'btn btn-success' %>
  <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>

<div class="row">
  <% if @list.movies.empty? %>
    <p>You haven't saved any movies yet! 🎬</p>
  <% else %>
    <% @list.movies.each do |movie| %>
      <div class="col-md-4"> <!-- Use a col-md-6 para cards lado a lado em telas médias e maiores -->
        <div class="card card-img">
          <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

</div>
